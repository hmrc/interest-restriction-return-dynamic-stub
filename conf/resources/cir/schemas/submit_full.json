{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Submit Full IRR Request Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "agentDetails",
    "declaration",
    "groupCompanyDetails",
    "groupLevelAmount",
    "groupLevelElections",
    "groupSubjectToInterestReactivation",
    "groupSubjectToInterestRestrictions",
    "publicInfrastructure",
    "reportingCompany",
    "returnContainsEstimates",
    "submissionType",
    "totalReactivation",
    "totalRestrictions",
    "ukCompanies"
  ],
  "properties": {
    "declaration": {
      "type": "boolean"
    },
    "agentDetails": {
      "type": "object",
      "additionalProperties": false,
      "required": ["agentActingOnBehalfOfCompany"],
      "properties": {
        "agentActingOnBehalfOfCompany": {
          "type": "boolean"
        },
        "agentName": {
          "$ref": "#/definitions/ukCompanyNameType"
        }
      }
    },
    "reportingCompany": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "companyName",
        "ctutr",
        "sameAsUltimateParent"
      ],
      "properties": {
        "companyName": {
          "$ref": "#/definitions/ukCompanyNameType"
        },
        "ctutr": {
          "$ref": "#/definitions/utrType"
        },
        "sameAsUltimateParent": {
          "type": "boolean"
        }
      }
    },
    "publicInfrastructure": {
      "type": "boolean"
    },
    "groupCompanyDetails": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "accountingPeriod",
        "totalCompanies"
      ],
      "properties": {
        "totalCompanies": {
          "type": "integer",
          "format": "int32",
          "minimum": 1
        },
        "accountingPeriod": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "endDate",
            "startDate"
          ],
          "properties": {
            "startDate": {
              "$ref": "#/definitions/dateType"
            },
            "endDate": {
              "$ref": "#/definitions/dateType"
            }
          }
        }
      }
    },
    "submissionType": {
      "type": "string",
      "enum": ["original", "revised"]
    },
    "revisedReturnDetails": {
      "$ref": "#/definitions/explanatoryNotesShort"
    },
    "angie": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01
    },
    "returnContainsEstimates": {
      "type": "boolean"
    },
    "groupEstimateReason": {
      "$ref": "#/definitions/explanatoryNotesLong"
    },
    "companiesEstimateReason": {
      "$ref": "#/definitions/explanatoryNotesLong"
    },
    "groupSubjectToInterestRestrictions": {
      "type": "boolean"
    },
    "groupSubjectToInterestReactivation": {
      "type": "boolean"
    },
    "groupLevelElections": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "activeInterestAllowanceAlternativeCalculation",
        "groupRatio",
        "interestAllowanceAlternativeCalculation",
        "interestAllowanceConsolidatedPartnership",
        "interestAllowanceNonConsolidatedInvestment"
      ],
      "properties": {
        "groupRatio": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "activeGroupEBITDAChargeableGains",
            "isElected"
          ],
          "properties": {
            "isElected": {
              "type": "boolean"
            },
            "groupEBITDAChargeableGains": {
              "type": "boolean"
            },
            "activeGroupEBITDAChargeableGains": {
              "type": "boolean"
            }
          }
        },
        "interestAllowanceAlternativeCalculation": {
          "type": "boolean"
        },
        "activeInterestAllowanceAlternativeCalculation": {
          "type": "boolean"
        }
      }
    },
    "ukCompanies": {
      "type": "array",
      "minItems": 1,
      "maxItems": 2147483647,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "companyName",
          "consenting",
          "netTaxInterestExpense",
          "netTaxInterestIncome",
          "qicElection",
          "taxEBITDA",
          "utr"
        ],
        "properties": {
          "companyName": {
            "$ref": "#/definitions/ukCompanyNameType"
          },
          "utr": {
            "$ref": "#/definitions/utrType"
          },
          "consenting": {
            "type": "boolean"
          },
          "qicElection": {
            "type": "boolean"
          },
          "netTaxInterestExpense": {
            "type": "number",
            "minimum": 0,
            "multipleOf": 0.01
          },
          "netTaxInterestIncome": {
            "type": "number",
            "minimum": 0,
            "multipleOf": 0.01
          },
          "taxEBITDA": {
            "type": "number",
            "multipleOf": 0.01
          }
        }
      }
    },
    "groupLevelAmount": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "interestAllowanceBroughtForward",
        "interestAllowanceForPeriod",
        "interestCapacityForPeriod",
        "interestReactivationCap"
      ],
      "properties": {
        "interestReactivationCap": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01
        },
        "interestAllowanceBroughtForward": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01
        },
        "interestAllowanceForPeriod": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01
        },
        "interestCapacityForPeriod": {
          "type": "number",
          "minimum": 0,
          "multipleOf": 0.01
        }
      }
    },
    "totalReactivation": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01
    },
    "totalRestrictions": {
      "type": "number",
      "minimum": 0,
      "multipleOf": 0.01
    }
  },
  "definitions": {
    "ukCompanyNameType": {
      "type": "string",
      "pattern": "^[ -~¡-ÿĀ-ʯḀ-ỿ‐-―'-‟₠-₿ÅK]{1,160}$"
    },
    "utrType": {
      "type": "string",
      "pattern": "^[0-9]{10}$"
    },
    "dateType": {
      "type": "string",
      "pattern": "^(((19|20)([2468][048]|[13579][26]|0[48])|2000)[-]02[-]29|((19|20)[0-9]{2}[-](0[469]|11)[-](0[1-9]|1[0-9]|2[0-9]|30)|(19|20)[0-9]{2}[-](0[13578]|1[02])[-](0[1-9]|[12][0-9]|3[01])|(19|20)[0-9]{2}[-]02[-](0[1-9]|1[0-9]|2[0-8])))$"
    },
    "explanatoryNotesShort": {
      "type": "string",
      "pattern": "^[ -~¢-¥©®±×÷‐₠-₿−-∝≈≠≣-≥]{1,5000}$"
    },
    "explanatoryNotesLong": {
      "type": "string",
      "pattern": "^[ -~¢-¥©®±×÷‐₠-₿−-∝≈≠≣-≥]{1,10000}$"
    }
  }
}
